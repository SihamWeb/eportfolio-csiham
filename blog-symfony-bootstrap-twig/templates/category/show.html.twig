{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <h1>{{ category.name }}</h1>

    <table class="table table-dark table-borderless table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}" class="btn btn-outline-dark btn-sm">back to list</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-outline-dark btn-sm">edit</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
